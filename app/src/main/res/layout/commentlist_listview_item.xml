<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:id="@+id/comment_listviewitem_view_line"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="90dp"
        android:background="#D0CCC7" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <com.sinosoft.fhcs.android.customview.CircleImageView
            android:id="@+id/comment_listviewitem_iv_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/usericon"
            app:border_color="#00000000"
            app:border_width="2dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/comment_listviewitem_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="啦啦啦"
                    android:textColor="#4D4C4A"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/comment_listviewitem_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="2015-12-22 22:33"
                    android:textColor="#AFAAA5"
                    android:textSize="11sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/comment_listviewitem_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="来了来了"
                android:textColor="#4D4C4A"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>