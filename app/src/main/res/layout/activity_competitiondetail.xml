<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F7F7F6"
    android:orientation="vertical" >

    <include
        android:id="@+id/cptdetail_include"
        layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/cptdetail_include"
        android:layout_marginBottom="95dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="18dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp" >

                <ImageView
                    android:id="@+id/cptdetail_img_type"
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/iconbike_big" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/cptdetail_tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="#4D4C4A"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:id="@+id/cptdetail_layout_time"
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/cptdetail_tv_time"
                        android:orientation="horizontal"
                        android:visibility="invisible" >

                        <TextView
                            android:id="@+id/cptdetail_tv_time_h1"
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:background="@drawable/icon_countdown_bg"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="#ffff"
                            android:textSize="15sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/cptdetail_tv_time_h2"
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="1dp"
                            android:background="@drawable/icon_countdown_bg"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#ffff"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/cptdetail_tv_time_h3"
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="1dp"
                            android:background="@drawable/icon_countdown_bg"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#ffff"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text=":"
                            android:textColor="#4D4C4A"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/cptdetail_tv_time_m1"
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:background="@drawable/icon_countdown_bg"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#ffff"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/cptdetail_tv_time_m2"
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="1dp"
                            android:background="@drawable/icon_countdown_bg"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#ffff"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text=":"
                            android:textColor="#4D4C4A"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/cptdetail_tv_time_s1"
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:background="@drawable/icon_countdown_bg"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#ffff"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/cptdetail_tv_time_s2"
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="1dp"
                            android:background="@drawable/icon_countdown_bg"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="#ffff"
                            android:textSize="15sp" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/competitionDetail_tv2"
                    android:textColor="#4D4C4A"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/cptdetail_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4D4C4A"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/competitionDetail_tv3"
                    android:textColor="#4D4C4A"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/cptdetail_tv_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4D4C4A"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/competitionDetail_tv4"
                    android:textColor="#4D4C4A"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/cptdetail_tv_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4D4C4A"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/competitionDetail_tv5"
                    android:textColor="#4D4C4A"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/cptdetail_tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4D4C4A"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="8dp"
            android:background="#D0CCC7" />

        <GridView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:id="@+id/cptdetail_gridview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:horizontalSpacing="8dp"
            android:numColumns="3"
            android:scrollbars="none"
            android:verticalSpacing="10dp" 
            android:overScrollMode="never"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/cptdetail_btn_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_cptdetailcomment_selector"
            android:gravity="center"
            android:text="评论(0)"
            android:textColor="@drawable/text_cptdetailcomment_selector"
            android:textSize="17sp" />
    </LinearLayout>

</RelativeLayout>