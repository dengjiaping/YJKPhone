<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/pkpersonal_include"
        layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_pk_personal"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

         

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="30dp" >

                        <com.sinosoft.fhcs.android.customview.CircleImageView
                            android:id="@+id/pkpersonal_iv_img"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/avatar"
                            app:border_color="#00000000"
                            app:border_width="0dp" />

                        <ImageView
                            android:id="@+id/pkpersonal_iv_gender"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="3dp"
                            android:layout_marginRight="2dp"
                            android:background="@drawable/icon_man" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/pkpersonal_tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="昵称"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:id="@+id/pkpersonal_near_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/pkpersonal_tv_address_pk"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right|center_vertical"
                            android:text="北京海淀"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="1.5dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:background="#FFFFFF" />

                        <TextView
                            android:id="@+id/pkpersonal_tv_near"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left|center_vertical"
                            android:text="100米以内"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pkpersonal_friend_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/pkpersonal_tv_address_friend"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="北京海淀"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/pkpersonal_tv_signature"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:text="个性签名：运动起来吧！骚年！"
                        android:textColor="#CFCBC6"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/pkpersonal_btn_addfriend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/btn_addfriend_selector" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                             android:layout_gravity="center_vertical"
                            android:gravity="center_vertical|right"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/pkpersonal_tv_distance_yesterday"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="#FFFFFF"
                                    android:textSize="30sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="公里"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="一天前走路"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1.5dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="25dp"
                            android:layout_marginRight="25dp"
                            android:layout_marginTop="5dp"
                            android:background="#D0CCC7" />

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                             android:layout_gravity="center_vertical"
                            android:gravity="center_vertical|left"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:id="@+id/pkpersonal_flag_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" 
                                 android:minWidth="75dp">

                                <TextView
                                    android:id="@+id/pkpersonal_tv_distance_best"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textColor="#FFFFFF"
                                    android:textSize="30sp" 
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="公里"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp" 
                                    />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignRight="@id/pkpersonal_flag_layout"
                                android:layout_below="@id/pkpersonal_flag_layout"
                                android:text="个人最好成绩"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                         android:layout_marginTop="20dp"
                        android:layout_gravity="center_horizontal" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="我比"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                     <TextView
                         android:id="@+id/pkpersonal_tv_nickname2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="昵称"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                      <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="的日均运动量"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                       <TextView
                        android:id="@+id/pkpersonal_tv_distanceadd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="多0"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />
                        <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="公里"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />
                    </LinearLayout>
                    <LinearLayout 
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:gravity="center"
                          android:layout_marginTop="40dp">
                        <Button
                        android:id="@+id/pkpersonal_btn_leavemessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/btn_pkmessage_selector" 
                        android:layout_marginRight="30dp"/>
                        <Button
                            android:layout_marginLeft="30dp"
                        android:id="@+id/pkpersonal_btn_competition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/btn_pkcompetition_selector" />
                    </LinearLayout>
                </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>