<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="67dp"
        android:background="@drawable/popmenubg"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/menu_layout_record"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerInParent="true" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/menu_record_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="@string/menu_tv_name1"
                    android:textColor="@drawable/textcolorpop"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="fill_parent" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#2B2C2D" />

        <RelativeLayout
            android:id="@+id/menu_layout_information"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/menu_information_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="@string/menu_tv_name2"
                    android:textColor="@drawable/textcolorpop"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="fill_parent" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#2B2C2D" />

        <RelativeLayout
            android:id="@+id/menu_layout_medicine"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/menu_medicine_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="@string/menu_tv_name3"
                    android:textColor="@drawable/textcolorpop"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="fill_parent" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#2B2C2D" />

        <RelativeLayout
            android:id="@+id/menu_layout_info"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/menu_info_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="@string/menu_tv_name4"
                    android:textColor="@drawable/textcolorpop"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="fill_parent" />
            </LinearLayout>
        </RelativeLayout>
         <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:background="#2B2C2D" />

        <RelativeLayout
            android:id="@+id/menu_layout_goal"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/menu_goal_selector" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="@string/menu_tv_name5"
                    android:textColor="@drawable/textcolorpop"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="fill_parent" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>