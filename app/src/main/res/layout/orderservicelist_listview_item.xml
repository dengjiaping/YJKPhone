<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="16dp"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="16dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/orderservice_item_layout2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/orderservice_item_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个性化健康关爱计划"
            android:textColor="#4C4C49"
            android:textSize="18sp"
             />

        <TextView
            android:id="@+id/orderservice_item_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:lineSpacingExtra="2dp"
            android:text="推广期间\n推广期间\n推广期间\n推广期间"
            android:textColor="#807D78"
            android:textSize="12sp" />
        <LinearLayout
            android:id="@+id/orderservice_item_layout_isorder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
         android:layout_marginTop="2dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您已订购该服务"
            android:textColor="#00B0EF"
            android:textSize="12sp" />
        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
         android:layout_marginTop="2dp">
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订购周期："
            android:textColor="#00B0EF"
            android:textSize="12sp" />
          <TextView
               android:id="@+id/orderservice_item_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015.12.15-2015.12.15"
            android:textColor="#00B0EF"
            android:textSize="12sp" />
         </LinearLayout>
         </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/orderservice_item_layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/orderservice_item_tv_tuiguang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推广期间"
                android:textColor="#807D78"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/orderservice_item_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textColor="#00B0EF"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元/月"
                android:textColor="#807D78"
                android:textSize="12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/orderservice_item_btn_order"
            android:layout_width="112dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_cptdetailcomment_selector"
            android:gravity="center"
            android:text="立即订购"
            android:textColor="@drawable/text_cptdetailcomment_selector"
            android:textSize="17sp"
            android:focusable="false" />
          <Button
            android:id="@+id/orderservice_item_btn_unorder"
            android:layout_width="68dp"
            android:layout_height="28dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_unorder_selector"
            android:gravity="center"
            android:layout_gravity="right"
            android:text="退订服务"
            android:textColor="@drawable/text_unorder_selector"
            android:textSize="12sp"
            android:focusable="false" />
    </LinearLayout>

</RelativeLayout>