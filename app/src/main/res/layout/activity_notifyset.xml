<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F7F7F6"
    android:orientation="vertical" >

    <include
        android:id="@+id/forgetpass_include"
        layout="@layout/titlebar" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <ImageView
            android:id="@+id/notify_icon1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/notify_icon_m1" />

        <TextView
            android:id="@+id/notifyset_tv_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/notify_icon1"
            android:gravity="center_vertical"
            android:text="@string/notifyset_tv1"
            android:textColor="@color/text_notify_black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/notifyset_cbtn_remind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/notify_btn_open"
            android:gravity="center"
            android:visibility="visible" />
    </RelativeLayout>
<View 
    android:layout_width="fill_parent"
    android:layout_height="0.5dp"
    android:background="#D0CCC7"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
         >

        <ImageView
            android:id="@+id/notify_icon2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/notify_icon_in1" />

        <TextView
            android:id="@+id/notifyset_tv_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/notify_icon2"
            android:gravity="center_vertical"
            android:text="@string/notifyset_tv2"
            android:textColor="@color/text_notify_black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/notifyset_cbtn_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/notify_btn_open"
            android:gravity="center"
            android:visibility="visible" />
    </RelativeLayout>
<View 
    android:layout_width="fill_parent"
    android:layout_height="0.5dp"
    android:background="#D0CCC7"/>
</LinearLayout>