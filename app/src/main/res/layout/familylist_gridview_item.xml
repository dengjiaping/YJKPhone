<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <com.sinosoft.fhcs.android.customview.CircleImageView
            android:id="@+id/familylist_gridview_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:focusable="false"
            android:orientation="vertical"
            android:src="@drawable/mother"
            app:border_color="#00000000"
            app:border_width="0dp" />

        <ImageView
            android:id="@+id/familylist_gridview_delete"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/deleteicon"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/familylist_gridview_zhu"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/zhu"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/familylist_gridview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="妈妈"
        android:textColor="@color/history_black_text"
        android:textSize="16sp" />

</LinearLayout>