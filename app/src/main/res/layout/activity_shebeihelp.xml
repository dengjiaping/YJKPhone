<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F7F7F6"
    android:orientation="vertical" >

    <include
        android:id="@+id/shebei_include"
        layout="@layout/titlebar" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent" >
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <LinearLayout
            android:id="@+id/shebei_help_title_layout_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/shebei_help_title_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:text="请绑好血压计的绑带后点击“设备测量”按钮进行测量。"
                android:textColor="#4D4C4A"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/shebei_help_iv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shebei_help_title_layout_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/shebei_help_title_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:text="请绑好血压计的绑带后点击“设备测量”按钮进行测量。"
                android:textColor="#4D4C4A"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/shebei_help_iv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shebei_help_title_layout_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/shebei_help_title_3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:text="请绑好血压计的绑带后点击“设备测量”按钮进行测量。"
                android:textColor="#4D4C4A"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/shebei_help_iv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                 />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/shebei_help_title_layout_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/shebei_help_title_4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="20dp"
                android:text="请绑好血压计的绑带后点击“设备测量”按钮进行测量。"
                android:textColor="#4D4C4A"
                android:textStyle="bold"
                android:textSize="19sp" />

            <ImageView
                android:id="@+id/shebei_help_iv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/shebei_help_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="您还没有康康血压计？请点击"
                android:textColor="#4D4C4A"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/shebei_help_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="这里去购买"
                android:textColor="#00B0EC"
                android:textSize="17sp" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>